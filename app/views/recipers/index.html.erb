<h1 class="title">食譜列表</h1>

<%= link_to '新增食譜', new_reciper_path, class: 'button is-primary is-medium' %>

<hr>

<table class="table is-fullwidth">
  <tr>
    <td>名稱</td>
    <td>內容</td>
    <td>修改</td>
    <td>刪除</td>
  </tr>

  <% @recipers.each do |reciper| %>
    <tr>
      <td><%= reciper.title %></td>
      <td><%= reciper.content %></td>
      <td><%= link_to '修改', edit_reciper_path(reciper) %></td>
      <td><%= link_to '刪除', reciper_path(reciper), method: 'delete', data: {confirm: '確定刪除？'} %></td>
    </tr>
  <% end %>
</table>

